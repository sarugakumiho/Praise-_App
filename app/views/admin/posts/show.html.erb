<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-3 shadow-sm" style="border: 1px solid #ddd; border-radius: 10px;">
        <div class="card-body">
        
        <div class="d-flex flex-column align-items-center text-center" style="width: 100%;">
          <%= link_to admin_member_path(@member), class: "text-decoration-none w-100" do %>
            <div class="d-flex justify-content-center align-items-center mb-2">
              <%= image_tag @member.get_profile_image(400, 400), class: "rounded-circle border border-primary shadow", style: "width: 100px; height: 100px;" %>
            </div>
            <h3 class="card-name" style="color: black;"><strong><%= @member.name %></strong></h3>
            <p class="text-muted" style="font-size: 0.9rem;">投稿者</p>
          <% end %>
        </div>
          
          <h2 class="card-title text-center mb-3" style="font-weight: bold; color: #343a40;"><%= @post.title %></h2>
          
          <% if @post.memo.present? %>
            <div class="d-flex justify-content-center">
              <p class="card-text mb-4" style="font-size: 1.1rem; line-height: 1.6; text-align: left;">
                <%= simple_format(@post.memo) %>
              </p>
            </div>
          <% else %>
            <div class="mb-2"></div>
          <% end %>
　　　　　
          <% if @post.image.attached? %>
            <div class="text-center mb-4">
              <%= image_tag @post.image, class: "img-fluid rounded shadow-lg", style: "max-height: 400px; object-fit: cover;" %>
            </div>
            <div class="d-flex justify-content-center mb-4">
              <p class="card-text mb-0">
                <small class="text-muted">
                  状況: 
                  <% if @post.situation_status == "from_now" %>
                    <span style="color: #1e90ff; font-weight: bold;">これから！</span>
                  <% else %>
                    <span style="color: #dc143c; font-weight: bold;">達成済み！</span>
                  <% end %>
                </small>
              </p>
            </div>
          <% end %>
          
          <% if @post.start_on.present? || @post.end_on.present? %>
            <div class="d-flex justify-content-center my-3">
              <p class="card-text mb-0">
                <small class="text-muted pr-3">取り組み期限:</small>
                <% if @post.start_on.present? %>
                  <small class="text-muted pr-3"><%= @post.start_on.strftime('%Y年%m月%d日') %></small>
                <% end %>
                <% if @post.end_on.present? %>
                  <small class="text-muted pr-3">〜</small>
                  <small class="text-muted"><%= @post.end_on.strftime('%Y年%m月%d日') %></small>
                <% end %>
              </p>
            </div>
          <% end %>
          
          <!--タグの表示-->
          <div class="text-center my-5">
            <% @post_tags.each do |tag| %>
              <% if tag.posts.count > 0 %>
                <%= link_to "##{tag.tag_name}", tags_admin_posts_path(tag_id: tag.id), class: "badge badge-secondary" %>
              <% end %>
            <% end %>
          </div>

          <div class="text-center my-5">
            <%= link_to '削除する', admin_posts_destroy_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger mx-2", style: "font-weight: bold;" %>
            <%= link_to '戻る', admin_posts_path, class: "btn btn-outline-secondary mx-2" %>
          </div>
          
        </div>
      </div>
      
     
      <% if @post.post_status == "published" %>
        <div>
          <div class="row">
            <!-- いいねボタン表示 -->
            <p><strong><%= link_to "いいね件数： #{@post.favorites.count}", admin_post_path(@post), class: "text-decoration-none mx-3" %></strong></p>
            <!-- コメント表示 -->
            <p><strong><%= link_to "コメント件数： #{@post.post_comments.count}", admin_post_path(@post), class: "text-decoration-none ml-4" %></strong></p>
          </div>

  
          <% @post.post_comments.each do |post_comment| %>
            <div class="d-flex align-items-center mb-2">
              <p class="mb-0">
                <%= image_tag post_comment.member.get_profile_image(400, 400), class: "rounded-circle border border-primary shadow", style: "width: 50px; height: 50px; border: 3px solid #000;" %>
              </p>
              <div class="ml-3">
                <strong><%= post_comment.member.name %></strong>
                <br>
                <small class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></small>
              </div>
            </div>
            <div class="d-flex align-items-center mb-2">
              <p><%= post_comment.comment %></p>
              <%= link_to "削除", admin_destroy_post_comment_path(post_comment.post_id, post_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger ml-2", style: "width: 50px; height: 20px; font-size: 13px; line-height: 10px; margin-top: -10px;" %>
            </div>
          <% end %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>