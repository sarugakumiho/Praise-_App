<div class="container my-4 d-flex justify-content-center">
  <div class="card" style="width: 60rem; border: 2px solid darkslategray;">
    <div class="d-flex my-4 mx-4">
      
      <div class="d-flex flex-column">
        <h3 class="card-title d-flex justify-content-center"><strong><%= @member.name %></strong></h3>
        <div class="d-flex align-items-center">
          <%= image_tag @member.get_profile_image(400, 400), class: "rounded-circle", style: "width: 180px; height: 180px;" %>
        </div>
      </div>
      <div class="d-flex flex-column justify-content-center" style="width: 350px; margin-left: auto; padding-right: 5px;">
        <p class="card-text"><%= @member.introduction %></p>
      </div>

      <div class="d-flex flex-column justify-content-center" style="width: 300px; margin-left: auto; padding-right: 20px;">
        <%= link_to "フォロー中へ", relationships_followeds_path(@member), class: "btn mb-3", style: "background-color: lightskyblue; color: midnightblue; font-weight: bold;" %>
        <%= link_to "フォロワー", relationships_followers_path(@member), class: "btn mb-5", style: "background-color: lightskyblue; color: midnightblue; font-weight: bold;" %>
        <% if @member == current_member %>
          <%= link_to "プロフィール編集", edit_member_information_path(@member), class: "btn mb-2", style: "background-color: lightskyblue; color: midnightblue; font-weight: bold;" %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

<div class="container my-4 d-flex justify-content-center">
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <div class="container" style="width: 60rem;">
        <h5 style="width: 100%; height: 50px; background-color: lightskyblue; color: midnightblue; display: flex; justify-content: center; align-items: center;">
          <i class="fa-solid fa-bars-staggered"></i>
          &#12288;<strong>タイムライン(フォロー中)</strong>
        </h5>
        <%#= render 'posts/list', post: @post %>
      </div>
    </div>

    <div class="col-md-6 d-flex justify-content-center">
      <div class="container" style="width: 60rem;">
        <h5 style="width: 100%; height: 50px; background-color: lightskyblue; color: midnightblue; display: flex; justify-content: center; align-items: center;">
          <i class="fa-solid fa-rectangle-list"></i>
          &#12288;<strong>やることリスト（非公開）</strong>
        </h5>
        <%#= render 'posts/list', post: @post %>
      </div>
    </div>
  </div>
</div>