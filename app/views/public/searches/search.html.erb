<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      
      <!--member検索した際の表示-->
      <% if @model == 'Member' %>
        <h3 class="text-center" style="margin-bottom: 30px;">"<%= @content %>"の検索結果はこちら</h3>
        <%= render 'public/members/index', members: @records %>
      <!--post検索した際の表示 -->
      <% elsif @model == 'Post' %>
        <h3 class="text-center" style="margin-bottom: 30px;">"<%= @content %>"の検索結果はこちら</h3>
        <% if @records.present? %>
          <% @records.each do |post| %>
            <div class="d-flex justify-content-center">
              <div class="col-md-8">
                <%= render 'public/posts/mypost', post: post %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
      
    </div>
  </div>
</div>