<!--フォローボタンを表示-->
<% if current_member.present? && current_member != member %>
  <% if current_member.following?(member) %>
    <%= link_to "フォローを外す", relationships_destroy_path(member.id), method: :delete, class: "btn btn-info", style: "font-size: 13px;" %>
  <% else %>
    <%= link_to "フォローする", relationships_create_path(member.id), method: :post, class: "btn btn-info", style: "font-size: 13px;" %>
  <% end %>
<% end %>