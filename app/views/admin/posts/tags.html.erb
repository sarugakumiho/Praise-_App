<div class="container my-4">
  
  <div class="tags-section mb-5">
    <h4 class="text-center py-2 mb-4" style="font-weight: 600; background-color: #a6eda6; color: #000000; border-radius: 12px; box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1); letter-spacing: 0.5px;">
      全タグ一覧
    </h4>
    
    <!-- タグ検索フォーム -->
    <%= form_with url: admin_posts_tags_search_path, method: :get, local: true do |f| %>
      <div class="form-group">
        <%= f.label :search, "【タグ】を検索" %>
        <div class="d-flex align-items-center">
          <%= f.text_field :search, required: true, class: "form-control", placeholder: "タグを入力", style: "width: 20%;" %>
          <%= f.submit "検索", class: "ml-2" %>
        </div>
      </div>
    <% end %>
    
    <!-- タグの表示 -->
    <div class="d-flex flex-wrap">
      <% @tag_list.each do |list| %>
        <div class="d-flex align-items-center my-1">
          <%= link_to "##{list.tag_name}", tags_admin_posts_path(tag_id: list.id), class: "badge badge-secondary mx-3", style: "font-size: 1.1rem;" %>
          <span style="font-size: 1.4rem; margin-left: -1rem;"><%= "(#{list.posts.count})" %></span>
          <%= link_to '削除', destroy_tag_admin_posts_path(list), method: :delete, class: 'mini_btn mr-2', style: "font-size: 15px;", data: { confirm: 'このタグを削除してもよろしいですか？' } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 検索結果に紐づくリスト一覧を表示 -->
  <% if @tag.present? %>
    <h3 class="mb-4" style="font-weight: bold; color: #343a40; border-bottom: 3px solid #6c757d; display: inline-block; padding-bottom: 10px;">
      タグ: <%= @tag.tag_name %> のリスト一覧
    </h3>

    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render 'admin/posts/all_published_post', post: post %>
      <% end %>
      <!--ページネーション-->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="d-flex justify-content-center">
        <p class="text-center">該当するリストがありません。</p>
      </div>
    <% end %>
  <% else %>
    <div class="d-flex justify-content-center">
      <p class="text-center">指定されたタグが見つかりません。</p>
    </div>
  <% end %>
  
</div>