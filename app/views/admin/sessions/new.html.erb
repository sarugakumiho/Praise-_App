<div class="container mt-5">
  <h2 class="text-center mb-4" style="font-weight: bold; color: #343a40;">Admin Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal mx-auto", style: "max-width: 400px;" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 100%;" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-group text-center">
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>