<div class="d-flex justify-content-center">
  <div class="card" style="width: 60rem; border: 2px solid darkslategray;">
    <div class="d-flex my-4 mx-4">
      
      <!-- プロフィール欄表示 -->
      <div class="d-flex flex-column">
        <%= link_to member_path(@member), class: "text-decoration-none w-100" do %>
          <h3 class="card-name d-flex justify-content-center" style="color: black;"><strong><%= @member.name %></strong></h3>
          <div class="d-flex justify-content-center align-items-center">
            <%= image_tag @member.get_profile_image(400, 400), class: "rounded-circle border border-primary shadow", style: "width: 180px; height: 180px; border: 3px solid #000;" %>
          </div>
        <% end %>
      </div>

      <div class="d-flex flex-column justify-content-center" style="width: 350px; margin-left: auto; padding-right: 5px;">
        <p class="card-text"><%= @member.introduction %></p>
      </div>

      <div class="d-flex flex-column justify-content-center" style="width: 300px; margin-left: auto; padding-right: 20px;">
        <%= link_to "フォロー中へ", followings_path(@member), class: "btn btn-outline-primary mb-3", style: "font-weight: bold;" %>
        <%= link_to "フォロワー", followers_path(@member), class: "btn btn-outline-primary mb-5", style: "font-weight: bold;" %>
        <% unless @member.guest_member? %>
          <% if @member == current_member %>
            <%= link_to "プロフィール編集", edit_member_information_path(@member), class: "btn btn-outline-info mb-2", style: " font-weight: bold;" %>
          <% end %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

<div class="container my-4 d-flex justify-content-center">
  <div class="row">
    <!--タイムライン表示列-->
    <div class="col-md-6 d-flex justify-content-center">
      <div class="container" style="width: 60rem;">
        <h5 style="width: 100%; height: 50px; background-color: lightskyblue; color: midnightblue; display: flex; justify-content: center; align-items: center;">
          <i class="fa-solid fa-rectangle-list"></i>
          &#12288;<strong>フォローメンバーのタイムライン</strong>
        </h5>
        <% if @all_published_posts.present? %>
          <% @all_published_posts.each do |post| %>
            <%= render 'public/posts/mypost', post: post %>
          <% end %>
          <%= paginate @all_published_posts %>
        <% else %>
          <p class="text-center">フォローメンバーの公開投稿はありません。</p>
        <% end %>
      </div>
    </div>

    <!--やることリスト（非公開）表示列-->
    <div class="col-md-6 d-flex justify-content-center">
      <div class="container" style="width: 60rem;">
        <h5 style="width: 100%; height: 50px; background-color: lightskyblue; color: midnightblue; display: flex; justify-content: center; align-items: center;">
          <i class="fa-solid fa-rectangle-list"></i>
          &#12288;<strong>やることリスト（非公開）</strong>
        </h5>
        <% if @unpublished_posts.present? %>
          <% @unpublished_posts.each do |post| %>
            <%= render 'public/posts/mypost', post: post %>
          <% end %>
          <%= paginate @unpublished_posts, param_name: 'unpublished_page' %>
        <% else %>
          <p class="text-center">非公開の投稿はありません。</p>
        <% end %>
      </div>
    </div>
    
  </div>
</div>