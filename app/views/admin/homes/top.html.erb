<div class="d-flex justify-content-center my-4">
  <h3 style="border-bottom: 2px solid;"><strong>管理者トップページ</strong></h3>
</div>

<div class="container my-4">
  <div class="row">
  
    <!-- ユーザー一覧表示列 -->
    <div class="col-md-6">
      <div class="card" style="width: 100%;">
        <h5 class="card-header text-center" style="background-color: lightskyblue; color: midnightblue;">
          <i class="fa-solid fa-rectangle-list"></i> ユーザー一覧
        </h5>
        <div class="card-body">
          <% if @members.present? %>
            <table class="text-center" style="width: 100%;">
              <tbody>
                <% @members.each_with_index do |member, index| %>
                  <tr style="<%= 'border-bottom: 1px solid #ddd;' if index != @members.size - 1 %>;">
                    <!-- 各ユーザーに上下の余白を追加 -->
                    <td class="col-1" style="padding: 20px 0; text-align: center; vertical-align: middle;">
                      <%= link_to admin_member_path(member) do %>
                        <%= member.name %><br>
                        <%= image_tag member.get_profile_image(400, 400), class: "rounded-circle border border-primary shadow", style: "width: 100px; height: 100px; border: 3px solid #000;" %>
                      <% end %>
                      <div class="my-2">
                        <%= link_to "アカウント編集", edit_admin_member_path(member), class: "btn btn-outline-secondary", style: "width: 150px; height: 35px; font-size: 15px; font-weight: bold;" %>
                      </div>
                      <div class="my-2">
                        <%= link_to "アカウント削除", admin_member_destroy_path(member), class: "btn btn-outline-danger", method: :delete, data: { confirm: "本当に退会しますか？" }, style: "width: 150px; height: 35px; font-size: 15px; font-weight: bold; border-color: #ff1a1a;" %>
                      </div>
                    </td>
                    <td class="d-flex flex-column justify-content-between mx-3">
                      <div class="py-5">
                        <%= member.introduction %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @members %>
          <% else %>
            <p class="text-center">ユーザーが見つかりません。</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- 公開中リスト表示列 -->
    <div class="col-md-6">
      <div class="card" style="width: 100%;">
        <h5 class="card-header text-center" style="background-color: lightskyblue; color: midnightblue;">
          <i class="fa-solid fa-rectangle-list"></i> 公開中リスト
        </h5>
        <div class="card-body">
          <% if @all_published_posts.present? %>
            <% @all_published_posts.each do |post| %>
              <%= render "admin/posts/all_published_post", post: post %>
            <% end %>
            <%= paginate @all_published_posts %>
          <% else %>
            <p class="text-center">公開中の投稿がありません。</p>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>