<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-3 shadow-sm" style="border: 1px solid #ddd; border-radius: 10px;">
        <div class="card-body">
        
        <div class="d-flex flex-column align-items-center text-center" style="width: 100%;">
          <%= link_to member_path(@member), class: "text-decoration-none w-100" do %>
            <div class="d-flex justify-content-center align-items-center mb-2">
              <%= image_tag @member.get_profile_image(400, 400), class: "rounded-circle border border-primary shadow", style: "width: 100px; height: 100px;" %>
            </div>
            <h3 class="card-name" style="color: black;"><strong><%= @member.name %></strong></h3>
            <p class="text-muted" style="font-size: 0.9rem;">投稿者プロフィール</p>
          <% end %>
        </div>
          
          <h2 class="card-title text-center mb-3" style="font-weight: bold; color: #343a40;"><%= @post.title %></h2>
          
          <% if @post.memo.present? %>
            <div class="d-flex justify-content-center">
              <p class="card-text mb-4" style="font-size: 1.1rem; line-height: 1.6; text-align: left;">
                <%= simple_format(@post.memo) %>
              </p>
            </div>
          <% else %>
            <div class="mb-2"></div>
          <% end %>
　　　　　
          <% if @post.image.attached? %>
            <div class="text-center mb-4">
              <%= image_tag @post.image, class: "img-fluid rounded shadow-lg", style: "max-height: 400px; object-fit: cover;" %>
            </div>
            
            <div class="d-flex justify-content-start mb-4"  style="margin-left: 155px;">
              <p class="card-text mb-0">
                <small class="text-muted">
                  状況: 
                  <% if @post.situation_status == "from_now" %>
                    <span style="color: #1e90ff; font-weight: bold;">これから！</span>
                  <% else %>
                    <span style="color: #dc143c; font-weight: bold;">達成済み！</span>
                  <% end %>
                </small>
              </p>
            </div>
          <% end %>
          
          <% if @post.start_on.present? || @post.end_on.present? %>
            <div class="d-flex justify-content-center my-3">
              <p class="card-text mb-0">
                <small class="text-muted pr-3">取り組み期限:</small>
                <% if @post.start_on.present? %>
                  <small class="text-muted pr-3"><%= @post.start_on.strftime('%Y年%m月%d日') %></small>
                <% end %>
                <% if @post.end_on.present? %>
                  <small class="text-muted pr-3">〜</small>
                  <small class="text-muted"><%= @post.end_on.strftime('%Y年%m月%d日') %></small>
                <% end %>
              </p>
            </div>
          <% end %>

          <div class="text-center my-5">
            <% if @post.member == current_member %>
              <%= link_to '編集する', edit_post_path(@post), class: "btn btn-outline-primary mx-2", style: "font-weight: bold;" %>
              <%= link_to '削除する', post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger mx-2", style: "font-weight: bold;" %>
            <% end %>
            <%= link_to '戻る', posts_path, class: "btn btn-outline-secondary mx-2" %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>